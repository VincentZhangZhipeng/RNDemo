{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react-native",
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "build/",
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "module": "es2015"
  },
  "filesGlob": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "build", "libraries", ".history"],
  "compileOnSave": true
}
